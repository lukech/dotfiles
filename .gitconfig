[alias]
    b   = branch -vv 
    br  = branch -av 
    l   = log
    l1  = log --oneline --date=relative --pretty=format:'%C(yellow)%h %Cblue%>(12)%ad %Creset%<(16)%aN%Cred%d %C(cyan)%s'
    l11 = log --oneline
    lu  = log -u
    ls  = log --stat
    lg  = log --oneline --decorate --all --graph
    lt  = log --no-walk --tags --pretty=\"%h %d %s\" --decorate=full
    st  = status
    stu = status -uno # ignore untracked files
    r   = remote
    re  = remote -v 
    co  = checkout
    com = checkout master
    cod = checkout develop
    ci  = commit
    cp  = cherry-pick
    df  = diff

[color]
    diff = auto
    status = auto
    branch = auto

[core]
    editor = vim
    excludesfile = ~/.gitignore

[fetch]
    prune = true 

[log]
    date = human

